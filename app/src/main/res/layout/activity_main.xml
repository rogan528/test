<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/pptLayout"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </FrameLayout>
    <com.zhangbin.paint.whiteboard.DragVideoView
        android:id="@+id/drag_videoView"
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:layout_marginBottom="185dp"
        android:layout_gravity="center|bottom"
        android:clickable="false"
        android:longClickable="false"
        android:visibility="gone"/>
    <FrameLayout
        android:id="@+id/video_container"
        android:layout_gravity="right|bottom"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:visibility="gone"/>
    <tv.danmaku.ijk.media.example.widget.media.IjkDragVideoView
        android:id="@+id/ijk_videoView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="185dp"
        android:clickable="false"
        android:longClickable="false"
        android:visibility="visible"/>
    <com.zhangbin.paint.video.DragFrameLayout
        android:id="@+id/dragFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|center">
        <ImageView
            android:id="@+id/qiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/feitian"
            android:visibility="visible" />
    </com.zhangbin.paint.video.DragFrameLayout>
    <TableLayout
        android:id="@+id/hud_view"
        android:layout_width="180dp"
        android:layout_height="85dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|center"
        android:background="@color/ijk_transparent_dark"
        android:padding="8dp"
        android:visibility="gone"/>
    <Button
        android:id="@+id/jx_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:text="解析" />
    <Button
        android:id="@+id/undo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="90dp"
        android:text="撤销" />
    <Button
        android:id="@+id/redo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="120dp"
        android:text="恢复" />
    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="150dp"
        android:text="清空" />

</FrameLayout>