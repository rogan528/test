<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/send_btn"
        style="@style/send_btn_style"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/flower_btn"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@mipmap/giveflower"
        android:visibility="visible"/>


    <TextView
        android:id="@+id/flower_num"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_alignRight="@id/flower_btn"
        android:layout_alignTop="@id/flower_btn"
        android:background="@drawable/flower_num_bg"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="visible"/>
</RelativeLayout>